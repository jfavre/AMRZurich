<xml>
    <proxy>
        <group>sources</group>
        <name>ChomboReader</name>
        <label>ChomboReader</label>
        <property>
            <name>FileName</name>
            <label>FileName</label>
            <defaults/>
            <domains>
                <domain>
                    <text> The value(s) must be a filename (or filenames).</text>
                </domain>
            </domains>
        </property>
        <property>
            <name>NumLevels</name>
            <label>NumLevels</label>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>NumBlocks</name>
            <label>NumBlocks</label>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>EnableCaching</name>
            <label>EnableCaching</label>
            <documentation>
                <brief/>
                <long>Turn caching on/off</long>
            </documentation>
            <defaults>0</defaults>
            <domains>
                <domain>
                    <text>Accepts boolean values (0 or 1).</text>
                </domain>
            </domains>
        </property>
        <property>
            <name>Level</name>
            <label>Level</label>
            <documentation>
                <brief/>
                <long>This property specifies the desired level of resolution
        that will be visible.</long>
            </documentation>
            <defaults>1</defaults>
            <domains>
  Value(s) must be in the range (
    0,
    100).
</domains>
        </property>
        <property>
            <name>TimestepValues</name>
            <label>TimestepValues</label>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>PointArrayInfo</name>
            <label>PointArrayInfo</label>
            <defaults/>
            <domains/>
        </property>
        <property>
            <name>PointArrayStatus</name>
            <label>PointArrayStatus</label>
            <defaults/>
            <domains>
                <domain>
                    <text>The list of array names is provided by the reader.</text>
                </domain>
            </domains>
        </property>
        <ReaderFactory extensions="amr5" file_description="AMAZE Files"/>
    </proxy>
    <categoryindex>
        <label>Readers</label>
        <item proxy_name="ChomboReader" proxy_group="sources"/>
    </categoryindex>
</xml>
